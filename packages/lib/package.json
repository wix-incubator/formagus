{
  "name": "formagus",
  "description": "Versatile form library powered by Mobx",
  "scripts": {
    "build": "rm -rf dist && yarn build:esm && yarn build:cjs",
    "build:cjs": "tsc --allowImportingTsExtensions false --noEmit false --module CommonJS --outDir dist/cjs",
    "build:esm": "tsc --allowImportingTsExtensions false --noEmit false",
    "commit-cz": "git-cz",
    "es-lint": "eslint ./src/**/*.(json|ts|tsx) --fix --max-warnings=0",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,json,scss,css}'",
    "lint": "yarn es-lint && yarn format",
    "lint:fix": "yarn es-lint --fix && yarn format",
    "postcommit": "git update-index --again",
    "posttest": "yarn test:coverage",
    "precommit": "lint-staged",
    "prepush": "yarn test",
    "test": "yarn test:unit",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "ts": "tsgo --noEmit"
  },
  "exports": {
    "types": "./dist/types/index.d.ts",
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/lodash": "^4.17.21",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "@typescript/native-preview": "^7.0.0-dev.20251230.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.22.0",
    "is-ci": "^4.1.0",
    "jiti": "^2.6.1",
    "lint-staged": "^15.5.2",
    "mobx": "^6.15.0",
    "mobx-react-lite": "^4.1.1",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "trier-promise": "^1.0.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "mobx": "*",
    "mobx-react-lite": "*",
    "react": "*",
    "react-dom": "*"
  },
  "engines": {
    "node": ">=24"
  },
  "files": [
    "src",
    "dist",
    "!__tests__"
  ],
  "sideEffects": false,
  "version": "4.2.1",
  "publishConfig": {
    "logLevel": "verbose",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "author": {
    "name": "Iaroslav Shvets",
    "email": "iaroslav.shvets@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:wix-incubator/formagus.git",
    "directory": "/packages/lib"
  },
  "config": {
    "commitizen": {
      "path": "./packages/lib/node_modules/cz-conventional-changelog"
    }
  }
}
